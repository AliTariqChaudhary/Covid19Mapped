          -webkit-appearance: none;
          appearance: none;
          width: 25px;
          height: 25px;
          border-radius: 50%;
          background: #ff0000;
          cursor: pointer;
        }
        
        .slider::-moz-range-thumb {
          width: 25px;
          height: 25px;
          border-radius: 50%;
          background: #0986af;
          cursor: pointer;
        }
        .on_top
        {
            top:0;left:0;bottom:0;right:0;/*expand this div to the size of its parent*/
        }
        .set_width{
          margin-left: 12.5%;
          width: 75%;
          height: 50%;
        }
